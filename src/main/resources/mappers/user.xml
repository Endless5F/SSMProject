<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="user">

    <!-- 开启二级缓存 -->
    <cache eviction="LRU" flushInterval="600000" size="512" readOnly="true"/>

    <!--select查询语句 useCache：不使用缓存-->
    <select id="getUserAll" resultType="com.demo.maven.entity.User" useCache="false">
        select *
        from user
    </select>

    <!-- flushCache：立马清空缓存 -->
    <insert id="insert" parameterType="com.demo.maven.entity.User" flushCache="true">
        insert into user(uid, name, address, number) values(#{uid}, #{name}, #{address}, #{number})
    </insert>

</mapper>